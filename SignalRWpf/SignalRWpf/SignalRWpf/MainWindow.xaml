<Window x:Class="SignalRWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid Name="grid1">
            <Grid.RowDefinitions>
                <RowDefinition Height="229*" />
                <RowDefinition Height="82*" />
            </Grid.RowDefinitions>
            <TextBox Grid.Row="1"
                     Height="76"
                     HorizontalAlignment="Left"
                     x:Name="textBoxBroadcast"
                     VerticalAlignment="Top"
                     Width="342" />
            <Button x:Name="btnBroadcast" Content="Broadcast"
                    Grid.Row="1"
                    Height="23"
                    HorizontalAlignment="Left"
                    Margin="404,33,0,0"
                    
                    VerticalAlignment="Top"
                    Width="75"
                    Click="btnBroadcast_Click" />
            <ScrollViewer>
            <TextBlock x:Name="textBlockMessages" /></ScrollViewer>
        </Grid>
    </Grid>
</Window>
